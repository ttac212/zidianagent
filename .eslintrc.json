{
  "extends": [
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "caughtErrorsIgnorePattern": "^_"
    }],
    "no-unused-vars": "off",
    "no-console": ["warn", {
      "allow": ["warn", "error", "info"]
    }]
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "dist/",
    "*.d.ts",
    "scripts/*.js"
  ]
}