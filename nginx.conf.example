# Nginx配置文件 - 智点AI平台
# 位置：/etc/nginx/sites-available/zhidian-ai
# 使用方法：
#   1. 替换 your-domain.com 为实际域名
#   2. 软链接：ln -s /etc/nginx/sites-available/zhidian-ai /etc/nginx/sites-enabled/
#   3. 测试配置：nginx -t
#   4. 重启Nginx：systemctl restart nginx
#   5. 获取SSL证书：certbot --nginx -d your-domain.com -d www.your-domain.com

# HTTP服务器 - 重定向到HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name your-domain.com www.your-domain.com;

    # Let's Encrypt验证（certbot需要）
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # 强制HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS服务器
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name your-domain.com www.your-domain.com;

    # SSL证书（certbot自动配置）
    ssl_certificate /etc/letsencrypt/live/your-domain.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/your-domain.com/privkey.pem;

    # SSL安全配置
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_stapling on;
    ssl_stapling_verify on;

    # 安全头部
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # 日志
    access_log /var/log/nginx/zhidian-access.log;
    error_log /var/log/nginx/zhidian-error.log;

    # 客户端最大上传大小（用于抖音视频上传）
    client_max_body_size 100M;

    # 反向代理到Next.js应用
    location / {
        proxy_pass http://127.0.0.1:3007;
        proxy_http_version 1.1;

        # WebSocket支持（用于实时功能）
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';

        # 代理头部
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;

        # 缓存控制
        proxy_cache_bypass $http_upgrade;

        # SSE支持（聊天流式响应）
        proxy_buffering off;
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;

        # 超时设置
        proxy_connect_timeout 60s;
    }

    # 静态文件缓存（Next.js生成的静态资源）
    location /_next/static {
        proxy_pass http://127.0.0.1:3007;
        proxy_cache_valid 200 365d;
        proxy_cache_bypass $http_cache_control;
        add_header Cache-Control "public, max-age=31536000, immutable";

        # 预压缩支持
        gzip_static on;
    }

    # 图片缓存
    location ~* \.(jpg|jpeg|png|gif|ico|svg|webp|avif)$ {
        proxy_pass http://127.0.0.1:3007;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # 字体缓存
    location ~* \.(woff|woff2|ttf|eot)$ {
        proxy_pass http://127.0.0.1:3007;
        expires 365d;
        add_header Cache-Control "public, immutable";
    }

    # API路由（不缓存）
    location /api/ {
        proxy_pass http://127.0.0.1:3007;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # SSE支持
        proxy_buffering off;
        proxy_read_timeout 86400s;

        # 不缓存API响应
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }

    # 健康检查端点
    location /api/health {
        proxy_pass http://127.0.0.1:3007;
        access_log off;
    }

    # Gzip压缩
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/json
        application/javascript
        application/xml+rss
        application/rss+xml
        application/atom+xml
        image/svg+xml;
}
